.header
	display flex
	padding 20px 10px
	max-width 1200px
	margin auto
	justify-content space-between
	align-items center
	position absolute
	left 50%
	transform translate(-50%)
	width 100%
	z-index 99
	border-bottom 1px solid rgba(#fff,.3)
	&__logo
		// background-color yellow
		color #fff
		text-transform uppercase
		font-family clara
		font-size 24px
		@media screen and (max-width 768px)
			font-size 18px
	&__menu
		display flex
		justify-content space-around
		@media screen and (max-width 768px)
			display block
			position fixed
			background-color rgba(#212529,.95)
			left -100%
			top 0
			z-index 99999
			height 100vh
			width 250px
			padding 10px 20px
			transition left .5s
			overflow auto
			&.active
				left 0
		&__img
			display none
			@media screen and (max-width 768px)
				display block
				background-size cover
				background-color #fff
				width 150px
				height 150px
				border-radius 50%
				margin 20px auto
		&__link
			display block
			padding 15px 20px
			color #fff
			font-size 14px
			text-transform uppercase
			font-family seminegrita
			transition color .3s
			letter-spacing 1px
			&:hover
				color var(--c-primary)
			@media screen and (max-width 768px)
				border-bottom 1px solid rgba(#fff,.4)
				padding 20px 0
				text-align center					
			// font-family poppins-medium
			// text-shadow 1px 1px 1px #222
	&__button
		background-color var(--c-primary)
		border-radius 8px
		@media screen and (max-width 768px)
			margin-top 20px
			.header__menu__link
				border-bottom none
		&-menu
			display none
			@media screen and (max-width 768px)
				display block
				color var(--c-white)
				font-size 24px
